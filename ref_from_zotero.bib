	file = {Ashwood - Probabilistic Models for Characterizing Animal Lea.pdf:G\:\\Utilisateurs\\aynaz.adlzarrabi\\Zotero\\storage\\8KABT3FK\\Ashwood - Probabilistic Models for Characterizing Animal Lea.pdf:application/pdf},
